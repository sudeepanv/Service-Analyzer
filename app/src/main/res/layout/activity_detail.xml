<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="7dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/ifixblue"
            android:theme="@style/Widget.AppCompat.ActionBar"
            app:popupTheme="@style/Theme.AppCompat"
            app:title="Details"
            app:titleMarginStart="23dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="2dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:background="@drawable/blue_border">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:padding="3dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/imageContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" />

                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>

         <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/blue_border"
                    android:layout_marginTop="3dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:text=" Job No "
                        android:textSize="25dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/detailJobNo"
                        android:layout_height="wrap_content"
                        android:hint=""
                        android:textSize="25dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/blue_border"
                    android:layout_marginTop="3dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:text=" Entry"
                        android:textSize="25dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/detailTime"
                        android:layout_height="wrap_content"
                        android:hint=""
                        android:textSize="25dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/blue_border"
                    android:layout_marginTop="3dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:text=" Name "
                        android:textSize="25dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/detailName"
                        android:layout_height="wrap_content"
                        android:hint=""
                        android:textSize="25dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/blue_border"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:text=" Phone No"
                        android:textSize="25dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="-"
                        android:id="@+id/detailPhone"
                        android:textSize="25dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/blue_border"
                    android:padding="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:text=" Brand "
                        android:textSize="25dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="-"
                        android:id="@+id/detailBrand"
                        android:textSize="25dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/blue_border"
                    android:layout_marginTop="3dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:text=" Model "
                        android:textSize="25dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="-"
                        android:id="@+id/detailModel"
                        android:textSize="25dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/blue_border"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:text=" Colour "
                        android:textSize="25dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="-"
                        android:id="@+id/detailColour"
                        android:textSize="25dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/blue_border"
                    android:padding="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:text=" Password "
                        android:textSize="25dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="-"
                        android:id="@+id/detailPassword"
                        android:textSize="25dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/blue_border"
                    android:layout_marginTop="3dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:text=" Complaint "
                        android:textSize="25dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="-"
                        android:id="@+id/detailComplaint"
                        android:textSize="25dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/blue_border"
                    android:padding="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:text=" Status "
                        android:textSize="25dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="-"
                        android:id="@+id/detailStatus"
                        android:textSize="25dp"/>
                </LinearLayout>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:background="@drawable/blue_border"
                 android:layout_marginTop="3dp"
                 android:padding="5dp"
                 android:layout_height="wrap_content">
                 <TextView
                     android:layout_width="160dp"
                     android:layout_height="wrap_content"
                     android:text=" Estimate "
                     android:textSize="25dp"/>

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:hint="-"
                     android:id="@+id/detailEstimate"
                     android:textSize="25dp"/>
             </LinearLayout>

             <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/blue_border"
                    android:layout_marginTop="3dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:text=" Expense "
                        android:textSize="25dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="-"
                        android:id="@+id/detailExpense"
                        android:textSize="25dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/blue_border"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:text=" Amount "
                        android:textSize="25dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="-"
                        android:id="@+id/detailAmount"
                        android:textSize="25dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/blue_border"
                    android:layout_marginTop="3dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:text=" PaymentVia"
                        android:textSize="25dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="-"
                        android:id="@+id/detailPayment"
                        android:textSize="25dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/blue_border"
                    android:layout_marginTop="3dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:text=" Delivery"
                        android:textSize="25dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="-"
                        android:id="@+id/detailDelivery"
                        android:textSize="25dp"/>
                </LinearLayout>

            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="EDIT"
                        android:backgroundTint="@color/darkgreen"
                        android:id="@+id/editButton"
                        app:cornerRadius="4dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_weight="1"
                        />
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DELETE"
                        android:backgroundTint="@color/red"
                        android:id="@+id/deleteButton"
                        app:cornerRadius="4dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_weight="1"

                        />
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DELIVER"
                android:backgroundTint="@color/darkgreen"
                android:id="@+id/deliveredButton"
                app:cornerRadius="4dp"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"

                />
                </LinearLayout>


            </LinearLayout>

    </ScrollView>